<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#123456">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="50sp"
        android:layout_marginLeft="35sp"
        android:layout_marginRight="35sp"
        android:id="@+id/ll_forgot"
        android:background="#fff">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="22sp"
            android:layout_marginTop="10sp"
            android:gravity="center"
            android:padding="10sp"
            android:text="To reset your password, enter the email you registered with Expensious"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/mail32"
                android:layout_marginTop="5sp"
                android:layout_marginLeft="5sp"/>

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter Email ID"
                android:id="@+id/signIn_name"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="10sp"
                android:layout_marginRight="8sp"
                android:layout_marginTop="10sp"
                android:gravity="center"/>

        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="25sp"
        android:text="Reset Password"
        android:layout_below="@id/ll_forgot"
        android:layout_alignLeft="@id/ll_forgot"
        android:layout_alignRight="@id/ll_forgot"
        android:textSize="20sp"/>

</RelativeLayout>